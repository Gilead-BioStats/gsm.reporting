Package: gsm.reporting
Title: Good Statistical Monitoring Reporting
Version: 0.0.1
Authors@R: c( 
    person("Jeremy", "Wildfire", email = "jwildfire@gmail.com", role = c("aut", "cre")),
    person("Laura", "Maxwell", email = "laura.maxwell@atorusresearch.com", role = c("aut"))
